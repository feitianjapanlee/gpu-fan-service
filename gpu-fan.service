[Unit]
Description=GPU temperature based PWM fan control
After=multi-user.target
StartLimitIntervalSec=0

[Service]
Type=simple
ExecStart=/usr/local/bin/gpu_fan_control.sh
Restart=always
RestartSec=3
User=root
Group=root
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
# 必要に応じて PWM_PATH を固定したい場合:
# Environment=PWM_PATH=/sys/class/hwmon/hwmon5/pwm1

[Install]
WantedBy=multi-user.target

